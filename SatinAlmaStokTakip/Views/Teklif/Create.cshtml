@model SatinAlmaStokTakip.Models.Teklif

@{
    ViewData["Title"] = "Yeni Teklif";
    var talepId = ViewBag.TalepID;
}

<h2 class="text-2xl font-bold text-indigo-700 mb-6">Yeni Teklif Ekle</h2>

<form asp-action="Create" method="post" class="bg-white/80 rounded-xl shadow p-6 max-w-lg mx-auto space-y-4">
    <input type="hidden" asp-for="TalepID" value="@talepId" />

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Firma Adı</label>
        <input asp-for="FirmaAdi" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 px-3 py-2 text-gray-700" />
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Fiyat</label>
        <input asp-for="Fiyat" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 px-3 py-2 text-gray-700" type="number" step="0.01" />
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Notlar</label>
        <textarea asp-for="Notlar" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 px-3 py-2 text-gray-700"></textarea>
    </div>

    <div class="flex gap-3 mt-4">
                        <button type="submit" class="px-5 py-2 rounded-lg bg-gray-700 hover:bg-gray-800 text-white font-semibold flex items-center gap-2"><i class="fas fa-save"></i> Teklifi Kaydet</button>
        <a asp-controller="Talep" asp-action="Detay" asp-route-id="@talepId" class="px-5 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold flex items-center gap-2"><i class="fas fa-arrow-left"></i> Geri</a>
    </div>
</form>
