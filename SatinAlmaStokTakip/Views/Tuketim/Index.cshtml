@model List<SatinAlmaStokTakip.Models.Tuketim>
@{
    ViewData["Title"] = "Tüketim Listesi";
}

<h2 class="text-2xl font-bold text-gray-800 mb-6">Tüketim Geçmişi</h2>

            <a asp-action="Create" class="px-5 py-2 rounded-lg bg-gray-800 hover:bg-gray-900 text-white font-semibold flex items-center gap-2 mb-4"><i class="fas fa-plus"></i> Yeni Tüketim</a>

<div class="overflow-x-auto rounded-xl shadow bg-white/80">
    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Stok ID</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Miktar</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Tarih</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Açıklama</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
            @foreach (var item in Model)
            {
                <tr class="hover:bg-indigo-50 transition">
                    <td class="px-4 py-2">@item.StokID</td>
                    <td class="px-4 py-2">@item.Miktar</td>
                    <td class="px-4 py-2">@item.Tarih.ToShortDateString()</td>
                    <td class="px-4 py-2">@item.Aciklama</td>
                </tr>
            }
        </tbody>
    </table>
</div>
