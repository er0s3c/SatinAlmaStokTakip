@model List<SatinAlmaStokTakip.Models.Fatura>

@{
    ViewData["Title"] = "Faturalar";
}

<h2 class="text-2xl font-bold text-gray-800 mb-6">Faturalar</h2>

            <a asp-action="Create" class="px-5 py-2 rounded-lg bg-gray-800 hover:bg-gray-900 text-white font-semibold flex items-center gap-2 mb-4"><i class="fas fa-plus"></i> Yeni Fatura Ekle</a>

<div class="overflow-x-auto rounded-xl shadow bg-white/80">
    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">ID</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Fatura No</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Tutar</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Fatura Tarihi</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Teklif ID</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">İşlem</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
            @foreach (var fatura in Model)
            {
                <tr class="hover:bg-indigo-50 transition">
                    <td class="px-4 py-2">@fatura.ID</td>
                    <td class="px-4 py-2">@fatura.FaturaNo</td>
                    <td class="px-4 py-2">@fatura.Tutar ₺</td>
                    <td class="px-4 py-2">@fatura.FaturaTarihi.ToShortDateString()</td>
                    <td class="px-4 py-2">@fatura.TeklifID</td>
                    <td class="px-4 py-2">
                        <a asp-action="Delete" asp-route-id="@fatura.ID" class="px-3 py-1 rounded bg-red-500 hover:bg-red-600 text-white text-xs font-semibold flex items-center gap-1" onclick="return confirm('Silmek istediğinize emin misiniz?')"><i class="fas fa-trash"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
