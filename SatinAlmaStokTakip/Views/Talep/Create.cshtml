@model SatinAlmaStokTakip.Models.Talep

@{
    ViewData["Title"] = "Yeni Talep";
}

<h2 class="text-2xl font-bold text-indigo-700 mb-6">Yeni Talep Oluştur</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="bg-white/80 rounded-xl shadow p-6 max-w-lg mx-auto space-y-4">
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Kullanıcı ID</label>
                        <input asp-for="KullaniciID" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-400 focus:border-gray-400 px-3 py-2 text-gray-700" />
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Durum</label>
                        <input asp-for="Durum" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-400 focus:border-gray-400 px-3 py-2 text-gray-700" placeholder="örn: Beklemede" />
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Dosya Ekle (Opsiyonel)</label>
                        <input type="file" name="dosya" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-400 focus:border-gray-400 px-3 py-2 text-gray-700" accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png" />
        <small class="text-gray-400">PDF, Word, Excel, resim dosyaları kabul edilir. Maksimum 10MB.</small>
    </div>

    <div class="flex gap-3 mt-4">
                        <button type="submit" class="px-5 py-2 rounded-lg bg-gray-700 hover:bg-gray-800 text-white font-semibold flex items-center gap-2"><i class="fas fa-save"></i> Kaydet</button>
        <a asp-action="Index" class="px-5 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold flex items-center gap-2"><i class="fas fa-times"></i> İptal</a>
    </div>
</form>
