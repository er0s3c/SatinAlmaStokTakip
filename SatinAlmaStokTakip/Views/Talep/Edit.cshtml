@model SatinAlmaStokTakip.Models.Talep

@{
    ViewData["Title"] = "Talep Güncelle";
}

<h2 class="text-2xl font-bold text-indigo-700 mb-6">Talep Durumu Güncelle</h2>

<form asp-action="Edit" method="post" class="bg-white/80 rounded-xl shadow p-6 max-w-lg mx-auto space-y-4">
    <input type="hidden" asp-for="ID" />
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Durum</label>
        <input asp-for="Durum" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 px-3 py-2 text-gray-700" />
    </div>

    <div class="flex gap-3 mt-4">
                        <button type="submit" class="px-5 py-2 rounded-lg bg-gray-700 hover:bg-gray-800 text-white font-semibold flex items-center gap-2"><i class="fas fa-save"></i> Güncelle</button>
        <a asp-action="Index" class="px-5 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold flex items-center gap-2"><i class="fas fa-arrow-left"></i> Geri</a>
    </div>
</form>
