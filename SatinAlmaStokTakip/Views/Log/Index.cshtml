@model List<SatinAlmaStokTakip.Models.Log>

@{
    ViewData["Title"] = "İşlem Geçmişi";
}

<h2 class="text-2xl font-bold text-indigo-700 mb-6">İşlem Geçmişi</h2>

<div class="overflow-x-auto rounded-xl shadow bg-white/80">
    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Kullanıcı</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">İşlem</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Tarih</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
            @foreach (var log in Model)
            {
                <tr class="hover:bg-indigo-50 transition">
                    <td class="px-4 py-2">@log.KullaniciAdi</td>
                    <td class="px-4 py-2">@log.Islem</td>
                    <td class="px-4 py-2">@log.Tarih.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
