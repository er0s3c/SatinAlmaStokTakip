@{
    ViewData["Title"] = "Giriş Yap";
}

<h2 class="text-2xl font-bold text-indigo-700 mb-6">Giriş Yap</h2>

@if (ViewBag.Hata != null)
{
            <div class="bg-red-50 text-red-800 rounded p-3 mb-4">@ViewBag.Hata</div>
}

<form asp-action="Login" method="post" class="bg-white/80 rounded-xl shadow p-6 max-w-md mx-auto space-y-4">
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Kullanıcı Adı</label>
                        <input name="kullaniciAdi" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-400 focus:border-gray-400 px-3 py-2 text-gray-700" />
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Şifre</label>
                        <input name="sifre" type="password" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-400 focus:border-gray-400 px-3 py-2 text-gray-700" />
    </div>

                    <button type="submit" class="w-full px-5 py-2 rounded-lg bg-gray-800 hover:bg-gray-900 text-white font-semibold flex items-center justify-center gap-2"><i class="fas fa-sign-in-alt"></i> Giriş Yap</button>
</form>
