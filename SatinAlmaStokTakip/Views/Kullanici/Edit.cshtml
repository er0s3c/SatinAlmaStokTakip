@model SatinAlmaStokTakip.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<h2 class="text-2xl font-bold text-indigo-700 mb-6">Kullanıcı Düzenle</h2>

<form asp-action="Edit" method="post" class="bg-white/80 rounded-xl shadow p-6 max-w-lg mx-auto space-y-4">
    <input type="hidden" asp-for="ID" />
    
    <div>
        <label asp-for="AdSoyad" class="block text-sm font-medium text-gray-700 mb-1">Ad Soyad</label>
        <input asp-for="AdSoyad" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 px-3 py-2 text-gray-700" />
        <span asp-validation-for="AdSoyad" class="text-red-500 text-xs"></span>
    </div>

    <div>
        <label asp-for="KullaniciAdi" class="block text-sm font-medium text-gray-700 mb-1">Kullanıcı Adı</label>
        <input asp-for="KullaniciAdi" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 px-3 py-2 text-gray-700" />
        <span asp-validation-for="KullaniciAdi" class="text-red-500 text-xs"></span>
    </div>

    <div>
        <label asp-for="Sifre" class="block text-sm font-medium text-gray-700 mb-1">Şifre</label>
        <input asp-for="Sifre" type="password" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 px-3 py-2 text-gray-700" />
        <span asp-validation-for="Sifre" class="text-red-500 text-xs"></span>
    </div>

    <div>
        <label asp-for="Rol" class="block text-sm font-medium text-gray-700 mb-1">Rol</label>
        <select asp-for="Rol" class="w-full rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 px-3 py-2 text-gray-700">
            <option value="">Rol Seçin</option>
            <option value="Admin">Admin</option>
            <option value="Yetkili">Yetkili</option>
            <option value="Personel">Personel</option>
        </select>
        <span asp-validation-for="Rol" class="text-red-500 text-xs"></span>
    </div>

    <div class="flex gap-3 mt-4">
                        <button type="submit" class="px-5 py-2 rounded-lg bg-gray-700 hover:bg-gray-800 text-white font-semibold flex items-center gap-2"><i class="fas fa-save"></i> Güncelle</button>
        <a asp-action="Index" class="px-5 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold flex items-center gap-2"><i class="fas fa-times"></i> İptal</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 