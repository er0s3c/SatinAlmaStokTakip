@model List<SatinAlmaStokTakip.Models.Kullanici>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<h2 class="text-2xl font-bold text-gray-800 mb-6">Kullanıcı Yönetimi</h2>

            <a asp-action="Create" class="px-5 py-2 rounded-lg bg-gray-800 hover:bg-gray-900 text-white font-semibold flex items-center gap-2 mb-4"><i class="fas fa-plus"></i> Yeni Kullanıcı Ekle</a>

<div class="overflow-x-auto rounded-xl shadow bg-white/80">
    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">ID</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Ad Soyad</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Kullanıcı Adı</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Rol</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase">İşlemler</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
            @foreach (var kullanici in Model)
            {
                <tr class="hover:bg-indigo-50 transition">
                    <td class="px-4 py-2">@kullanici.ID</td>
                    <td class="px-4 py-2">@kullanici.AdSoyad</td>
                    <td class="px-4 py-2">@kullanici.KullaniciAdi</td>
                    <td class="px-4 py-2">
                        <span class="px-2 py-1 rounded text-xs font-semibold @(kullanici.Rol == "Admin" ? "bg-red-50 text-red-800" : "bg-gray-100 text-gray-800")">
                            @kullanici.Rol
                        </span>
                    </td>
                    <td class="px-4 py-2 flex flex-wrap gap-2">
                        <a asp-action="Edit" asp-route-id="@kullanici.ID" class="px-3 py-1 rounded bg-yellow-400 hover:bg-yellow-500 text-white text-xs font-semibold flex items-center gap-1"><i class="fas fa-edit"></i> Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@kullanici.ID" class="px-3 py-1 rounded bg-red-500 hover:bg-red-600 text-white text-xs font-semibold flex items-center gap-1" onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?')"><i class="fas fa-trash"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 